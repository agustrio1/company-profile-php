{
    "name": "agustrio1/company-profile-php",
    "description": "company profile php native tailwind css flowbite alpine js",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Core/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "agustrio1",
            "email": "agustrio1998@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "robinvdvleuten/ulid": "^5.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8000 -t public"
        ],
        "migrate": "php migrate.php migrate",
        "migrate:fresh": "php migrate.php fresh",
        "migrate:fresh-seed": "php migrate.php fresh-seed",
        "migrate:status": "php migrate.php status",
        "migrate:rollback": "php migrate.php rollback",
        "db:seed": "php migrate.php seed",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "serve": "Start PHP development server on localhost:8000",
        "migrate": "Run pending migrations",
        "migrate:fresh": "Drop all tables and re-run migrations",
        "migrate:fresh-seed": "Fresh migration with seeders",
        "migrate:status": "Show migration status",
        "migrate:rollback": "Rollback last migration batch",
        "db:seed": "Run database seeders",
        "test": "Run PHPUnit tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "process-timeout": 0
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}